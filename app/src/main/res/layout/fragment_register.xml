<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_register"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageButton
        android:id="@+id/button_back_register"
        android:layout_marginRight="-4dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_baseline_arrow_back_dark_green_24"
        android:background="@color/transparent"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Hello!"
        android:layout_marginTop="25dp"
        android:textAlignment="textEnd"
        android:textColor="@color/dark_green"
        android:textSize="48dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Create a new account"
        android:textAlignment="textEnd"
        android:textColor="@color/default_gray"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/name_register_edit_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_account_circle_24"
        android:hint="Name" />


    <EditText
        android:id="@+id/email_register_edit_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_email_24"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_register_edit_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/password_check_register_edit_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:drawableRight="@drawable/ic_baseline_lock_24"
        android:hint="Confirm password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_round"
        android:text="Register"
        app:backgroundTint="@color/dark_green" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="end"
        android:layout_marginTop="25dp"
        android:text="Don't have an account?"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/go_to_login_text_view"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="end"
        android:text="Sing in"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat" />
</LinearLayout>